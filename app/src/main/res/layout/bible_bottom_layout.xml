<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="5dp"
    app:cardCornerRadius="0dp"
    app:cardUseCompatPadding="false"
    app:contentPadding="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:cardPreventCornerOverlap="false">


    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/gradient_red_background"
        android:layout_gravity="end"
        android:padding="12dp"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <ImageView
            android:id="@+id/read"
            android:visibility="gone"
            android:layout_gravity="center|end"
            android:src="@drawable/speaker"
            android:tint="@color/white"
            android:layout_width="28dp"
            android:layout_height="28dp"/>


        <ImageView
            android:id="@+id/highlight"
            android:onClick="highlight_verses"
            android:layout_gravity="center|end"
            android:layout_marginStart="25dp"
            android:src="@drawable/marker"
            android:layout_width="28dp"
            android:layout_height="28dp"/>

        <ImageView
            android:id="@+id/copy"
            android:onClick="copy_selected_bible_verses"
            android:layout_gravity="center|end"
            android:tint="@color/white"
            android:layout_marginStart="25dp"
            android:src="@drawable/copy"
            android:layout_width="28dp"
            android:layout_height="28dp"/>

        <ImageView
            android:id="@+id/bookmark"
            android:layout_marginStart="25dp"
            android:onClick="bookmark_selected_bible_verses"
            android:layout_gravity="center|end"
            android:src="@drawable/bookmarks"
            android:tint="@color/white"
            android:layout_width="28dp"
            android:layout_height="28dp"/>

        <ImageView
            android:id="@+id/share"
            android:onClick="share_selected_bible_verses"
            android:layout_gravity="center|end"
            android:layout_marginStart="25dp"
            android:tint="@color/white"
            android:src="@drawable/share"
            android:layout_width="28dp"
            android:layout_height="28dp"/>

        <ImageView
            android:id="@+id/cancel"
            android:onClick="cancel_bottom_layout"
            android:layout_marginStart="25dp"
            android:layout_gravity="center|end"
            android:src="@drawable/ic_cancel_black_24dp"
            android:tint="@color/white"
            android:layout_width="28dp"
            android:layout_height="28dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>