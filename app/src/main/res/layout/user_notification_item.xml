<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/circularbordersolid"
    android:orientation="vertical"
    android:padding="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/profile"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <apps.envision.mychurch.utils.CircleImageView
            android:id="@+id/avatar"
            android:layout_marginEnd="15dp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/avatar"/>


        <LinearLayout
            android:layout_marginStart="75dp"
            android:layout_marginEnd="50dp"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <apps.envision.mychurch.ui.fonts.OpensSansBoldTextView
                android:id="@+id/name"
                android:text="@string/app_name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <apps.envision.mychurch.ui.fonts.OpenSansRegularTextView
                android:id="@+id/message"
                android:text="@string/view_profile"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <apps.envision.mychurch.ui.fonts.OpenSansRegularTextView
                android:id="@+id/time"
                android:text="@string/view_profile"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/view_post"
        android:layout_width="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_marginEnd="40dp"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <apps.envision.mychurch.ui.fonts.OpenSansRegularTextView
                android:text="@string/view_post"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/proceed"
            android:layout_marginEnd="5dp"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:tint="@color/material_blue_grey_700"
            android:src="@drawable/ic_navigate_next_white_24dp"/>

    </RelativeLayout>

</LinearLayout>