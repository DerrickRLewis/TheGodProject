<RelativeLayout android:layout_width="match_parent"
    android:id="@+id/input_post_layout"
    android:onClick="new_post"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/grey_round_bg"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <apps.envision.mychurch.utils.CircleImageView
        android:id="@+id/user_avatar"
        android:layout_marginEnd="15dp"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/avatar"/>


    <apps.envision.mychurch.ui.fonts.OpenSansRegularTextView
        android:id="@+id/comment"
        android:textSize="14sp"
        android:background="@drawable/oval_circle_background"
        android:paddingStart="50dp"
        android:layout_marginStart="80dp"
        android:paddingEnd="60dp"
        android:gravity="start"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:hint="@string/share_you_thoughts"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/send"
        android:layout_marginEnd="5dp"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/edit_image"/>

</RelativeLayout>