<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@color/material_grey_200"
    android:scrollbarSize="1dp"
    android:scrollbars="vertical"
    android:id="@+id/scrollView">

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <androidx.cardview.widget.CardView
            android:id="@+id/go_premium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardMaxElevation="0dp"
            app:cardElevation="0dp"
            app:contentPadding="0dp"
            app:contentPaddingBottom="0dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/gradient_red_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <apps.envision.mychurch.ui.fonts.RobotoBoldTextView
                    android:text="@string/start_subscription"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <apps.envision.mychurch.ui.fonts.RobotoRegularTextView
                    android:text="@string/start_subscription_hint"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/go_social"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="0dp"
            app:cardMaxElevation="0dp"
            app:cardElevation="0dp"
            app:contentPadding="0dp"
            app:contentPaddingBottom="0dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">

            <ImageView
                android:src="@drawable/go_social"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <View
                android:background="@color/black_transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <View
                android:background="@color/black_transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

                <View
                    android:background="@color/black_transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <LinearLayout
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <apps.envision.mychurch.ui.fonts.RobotoBoldTextView
                    android:text="Go Social"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <apps.envision.mychurch.ui.fonts.RobotoRegularTextView
                    android:text="Follow people, share your thoughts, chat, comment, like other peoples thoughts and lots more."
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="8dp"
            android:id="@+id/messages"
            app:cardElevation="@dimen/_8dp"
            app:cardCornerRadius="0dp"
            card_view:cardCornerRadius="0dp"
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image_one"
                        android:src="@drawable/messages"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <View
                        android:background="@color/backgroundTransparent1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>


                    <apps.envision.mychurch.ui.fonts.RobotoRegularTextView
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/white"
                        android:text="@string/video_amp_audio_messages"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>



                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:orientation="vertical"
                    android:weightSum="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/website"
                        android:background="@drawable/gradient_red_background"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="0dp">

                        <ImageView
                            android:src="@drawable/website"
                            app:tint="@color/white"
                            android:layout_width="24dp"
                            android:layout_height="24dp"/>

                        <apps.envision.mychurch.ui.fonts.RobotoRegularTextView
                            android:text="@string/website"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/donate"
                        android:background="@color/material_blue_grey_900"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="0dp">


                        <ImageView
                            android:src="@drawable/give"
                            app:tint="@color/white"
                            android:layout_width="24dp"
                            android:layout_height="24dp"/>

                        <apps.envision.mychurch.ui.fonts.RobotoRegularTextView
                            android:text="@string/donate"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hymns"
                        android:layout_weight="1"
                        android:background="@color/material_green_900"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="0dp">

                        <ImageView
                            android:src="@drawable/hymns"
                            app:tint="@color/white"
                            android:layout_width="24dp"
                            android:layout_height="24dp"/>

                        <apps.envision.mychurch.ui.fonts.RobotoRegularTextView
                            android:text="@string/hymns"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>




        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="350dp">


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:paddingEnd="8dp"
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/notes"
                    app:cardElevation="@dimen/_8dp"
                    app:cardCornerRadius="0dp"
                    card_view:cardCornerRadius="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/image_two"
                            android:src="@drawable/notes"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <View
                            android:background="@color/backgroundTransparent2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>


                        <apps.envision.mychurch.ui.fonts.RobotoRegularTextView
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="15dp"
                            android:textColor="@color/white"
                            android:text="@string/notes"
                            android:textSize="22sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/livestreams"
                    app:cardElevation="@dimen/_8dp"
                    app:cardCornerRadius="0dp"
                    android:layout_marginTop="10dp"
                    card_view:cardCornerRadius="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/image_four"
                            android:src="@drawable/livestream"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <View
                            android:background="@color/backgroundTransparent7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>


                        <apps.envision.mychurch.ui.fonts.RobotoRegularTextView
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="15dp"
                            android:textColor="@color/white"
                            android:text="LiveStreams"
                            android:textSize="22sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/radio"
                    app:cardElevation="@dimen/_8dp"
                    app:cardCornerRadius="0dp"
                    card_view:cardCornerRadius="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/image_five"
                            android:src="@drawable/radio"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <View
                            android:background="@color/backgroundTransparent4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>


                        <apps.envision.mychurch.ui.fonts.RobotoRegularTextView
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="15dp"
                            android:textColor="@color/white"
                            android:text="Radio"
                            android:textSize="22sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_height="match_parent">


                <androidx.cardview.widget.CardView
                    android:id="@+id/bible"
                    app:cardElevation="@dimen/_8dp"
                    app:cardCornerRadius="0dp"
                    card_view:cardCornerRadius="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/image_three"
                            android:src="@drawable/bible"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <View
                            android:background="@color/backgroundTransparent5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>


                        <apps.envision.mychurch.ui.fonts.RobotoRegularTextView
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="15dp"
                            android:textColor="@color/white"
                            android:text="@string/bible"
                            android:textSize="22sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/devotionals"
                app:cardElevation="@dimen/_8dp"
                app:cardCornerRadius="0dp"
                android:layout_marginTop="10dp"
                card_view:cardCornerRadius="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image_six"
                        android:src="@drawable/devotionals"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/backgroundTransparent3" />

                    <apps.envision.mychurch.ui.fonts.RobotoRegularTextView
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/white"
                        android:text="@string/devotionals"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</ScrollView>